server:
  hide-version: yes
  verbosity: <%= @verbosity %>
  database: "<%= @database %>"
<% if @interface.is_a? Array -%>
<% @interface.each do |int| -%><%= "  ip-address: #{int}\n" %><% end -%>
<% elsif @interface != '' -%><%=   "  ip-address: #{@interface}" %>
<% end -%>
  port: <%= @port %>
  rrl-size: <%= @rrl_size %>
  rrl-ratelimit: <%= @rrl_ratelimit %>
